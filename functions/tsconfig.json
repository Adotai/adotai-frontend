{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": [
      "es2017" // <-- AQUI!
    ],
    "types": [
      "node",
      "firebase-functions",
      "firebase-admin"
    ],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}